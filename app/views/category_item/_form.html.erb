<%= form_with(url: "/search-month", method: "post", class: "form-inline") do |form| %>

  <div class="form-group mx-2">
    <%= form.label :month, class: "font-weight-bold mr-2" %>
    <%= form.select :month, options_for_select([[ "January", "01" ],[ "February", "02" ], [ "March", "03" ], [ "April", "04" ], [ "May","05" ], [ "June","06" ], [ "July","07" ], [ "August","08" ], [ "September","09" ], [ "October","10" ], [ "November","11" ],  [ "December","12" ] ]), class: "form-control mx-2"%>
  </div>

  <div class="form-group mx-2">
    <%= form.label :year, class: "font-weight-bold mr-2" %>
    <%= form.select :year, options_for_select([2020, 2021, 2022,2023,2024,2025,2026,2027,2028,2029,2030,2031,2032]), class: "form-control" %>
  </div>

  <div class="actions mx-2">
    <%= form.submit "Go To Month", class: "btn btn-dark" %>
  </div>
<% end %>
